<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="cekurte_google_api.service.class">Cekurte\GoogleApiBundle\Service\GoogleService</parameter>
        <parameter key="cekurte_google_api.client.gmail.class">Google_Service_Gmail</parameter>
    </parameters>

    <services>
        <service id="cekurte_google_api.service" class="%cekurte_google_api.service.class%">
            <argument>%cekurte_google_api_application_name%</argument>
            <argument>%cekurte_google_api_client_id%</argument>
            <argument>%cekurte_google_api_client_secret%</argument>
            <argument>%cekurte_google_api_redirect_uri%</argument>
            <argument>%cekurte_google_api_developer_key%</argument>
            <argument>%cekurte_google_api_use_objects%</argument>
        </service>
        <service id="cekurte_google_api.gmail" class="%cekurte_google_api.client.gmail.class%">
            <argument type="expression">service('cekurte_google_api.service').getClient()</argument>
        </service>
    </services>
</container>
